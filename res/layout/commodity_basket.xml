<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/basket_commodity_image"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/clothes_1"
        android:scaleType="centerInside"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_toRightOf="@id/basket_commodity_image"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/basket_commodity_describe"
            android:maxLines="2"
            android:text="pants九分裤，时尚潮流男学生"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/basket_commodity_prices"
            android:text="$48"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>